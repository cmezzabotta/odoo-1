<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_payment_provider_form_mercado_pago_qr" model="ir.ui.view">
        <field name="name">payment.provider.form.mercado.pago.qr</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='configuration']" position="inside">
                <group attrs="{'invisible': [('code', '!=', 'mercado_pago_qr')]}" string="Mercado Pago QR">
                    <group>
                        <field name="mercado_pago_access_token" password="True"/>
                        <field name="mercado_pago_collector_id"/>
                        <field name="mercado_pago_store_id"/>
                        <field name="mercado_pago_pos_id"/>
                    </group>
                    <group>
                        <field name="mercado_pago_notification_url"/>
                        <field name="mercado_pago_sandbox_mode"/>
                        <field name="mercado_pago_timeout"/>
                    </group>
                    <label string="Configure your Mercado Pago credentials obtained from https://www.mercadopago.com.ar/developers" colspan="4"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

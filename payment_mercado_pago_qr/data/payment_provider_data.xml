<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="payment_method_mercado_pago_qr" model="payment.method">
        <field name="name">Mercado Pago QR</field>
        <field name="code">mercado_pago_qr</field>
        <field name="payment_type">unique</field>
    </record>

    <record id="payment_provider_mercado_pago_qr" model="payment.provider">
        <field name="name">Mercado Pago QR</field>
        <field name="code">mercado_pago_qr</field>
        <field name="state">test</field>
        <field name="company_id" eval="False"/>
        <field name="payment_method_ids" eval="[(6, 0, [ref('payment_method_mercado_pago_qr')])]"/>
        <field name="view_template_id" ref="payment_mercado_pago_qr.mercado_pago_qr_form"/>
    </record>
</odoo>
